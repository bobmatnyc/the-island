  "classification_strategies": {
    "keyword_matching": {
      "description": "Match entity mentions against keyword lists",
      "weight": 0.40,
      "requires_context": true,
      "case_insensitive": true
    },
    "evidence_based": {
      "description": "Score based on document type and source quality",
      "weight": 0.35,
      "requires_source_metadata": true
    },
    "frequency_analysis": {
      "description": "Consider frequency of mentions and co-occurrences",
      "weight": 0.15,
      "applies_to": ["frequent_travelers", "social_contacts"]
    },
    "hierarchical_inference": {
      "description": "Infer classifications from related entities",
      "weight": 0.10,
      "requires_relationship_graph": true
    }
  },
  "multi_classification_rules": {
    "allowed_combinations": [
      ["victims", "plaintiffs", "witnesses"],
      ["associates", "employees", "frequent_travelers"],
      ["public_figures", "social_contacts", "associates"],
      ["legal_professionals", "witnesses"],
      ["co_conspirators", "defendants", "associates"],
      ["employees", "witnesses"]
    ],
    "conflicting_classifications": [
      ["victims", "co_conspirators"],
      ["legal_professionals", "defendants"],
      ["investigators", "defendants"]
    ],
    "priority_rules": {
      "description": "When multiple classifications apply, display in priority order",
      "resolution": "Show all applicable, sorted by priority field from schema"
    }
  },
  "confidence_calculation": {
    "formula": "weighted_sum(strategy_scores) * evidence_quality * source_count_factor",
    "source_count_factor": {
      "1": 0.7,
      "2": 0.85,
      "3": 0.95,
      "4+": 1.0
    },
    "evidence_quality": {
      "primary_source": 1.0,
      "secondary_source": 0.7,
      "tertiary_source": 0.4
    },
    "minimum_confidence": 0.30,
    "notes": [
      "Confidence scores should be continuously updated as new evidence is added",
      "Multiple weak sources do not necessarily create high confidence",
      "Legal documents and official records carry highest weight"
    ]
  },
  "validation_rules": {
    "required_fields": {
      "classification_type": "Must match a classification from entity_classifications.json",
      "confidence_score": "Float between 0.0 and 1.0",
      "evidence_sources": "Array of source document references",
      "assigned_date": "ISO 8601 timestamp"
    },
    "recommended_fields": {
      "assigned_by": "User or system identifier",
      "review_status": "pending, approved, rejected",
      "notes": "Free text explanation or context"
    }
  },
  "notes": [
    "Classification rules should be applied programmatically during document ingestion",
    "Manual review and override should be supported for edge cases",
    "Confidence scores help prioritize manual review efforts",
    "Multi-classification support reflects real-world complexity",
    "Rules should be updated based on feedback and new document patterns"
  ]
}
